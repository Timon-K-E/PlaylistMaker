<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок главного экрана  -->
    <style name="ButtonMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="cornerRadius">@dimen/rounding_of_bottom</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/indentation_from_text</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль для отступов контейнера  -->
    <style name="LinearLayoutContainerPadded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_indentation</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Стиль для TextView в настройках -->
    <style name="TextViewSettingItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/distance_between_bottom_2</item>
        <item name="android:paddingRight">@dimen/screen_edge_indentation_2</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">?attr/colorOnSurfaceVariant</item>
        <item name="android:textSize">@dimen/text_size_setting_activity</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль для контейнера заголовка экрана  -->
    <style name="LinearLayoutHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/screen_edge_indentation</item>
    </style>

    <!-- Стиль для текста контейнера заголовка экрана  -->
    <style name="TextViewtHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="ButtonBack">
        <item name="android:backgroundTint">@color/black</item>

        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="SettingsTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>

