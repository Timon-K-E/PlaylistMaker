<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SearchActivity"
        android:theme="@style/Theme.PlaylistMaker">

    <LinearLayout
        style="@style/LinearLayoutHeader">

        <Button
            android:id="@+id/back_screen_search"
            style="@style/ButtonBack"/>

        <TextView
            style="@style/TextViewtHeader"
            android:text="@string/search" />
    </LinearLayout>

      <LinearLayout
        android:id="@+id/search_field_container"
        style="@style/LinearLayoutContainerPadded"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:radius="@dimen/radius_search_bar"
        android:background="@drawable/search_field_background" >

          <EditText
              style="@style/searchBarText"
              android:id="@+id/search_edit_text"
              android:maxLines="1"
              android:inputType="text"
              android:hint="@string/search"
              android:drawableStart="@drawable/ic_search_bar_16"
              android:textCursorDrawable="@drawable/cursor"/>

          <ImageView
              android:id="@+id/clear_button"
              style="@style/clearButton"
              android:src="@drawable/ic_search_clean_16"
              android:visibility="gone" />
    </LinearLayout>


</LinearLayout>