<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для кнопок главного экрана  -->
    <style name="ButtonMain">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="cornerRadius">@dimen/radius_of_bottom</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/element_padding_8</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Стиль для отступов контейнера  -->
    <style name="LinearLayoutContainerPadded">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/element_margin_16</item>
        <item name="android:layout_marginEnd">@dimen/element_margin_16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Стиль для TextView в настройках -->
    <style name="TextViewSettingItem">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/element_padding_21</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль для контейнера заголовка экрана  -->
    <style name="LinearLayoutHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/title_padding_top</item>
        <item name="android:paddingBottom">@dimen/title_padding_bottom</item>
        <item name="android:layout_marginStart">@dimen/element_margin_16</item>
    </style>

    <!-- Стиль для текста контейнера заголовка экрана  -->
    <style name="TextViewtHeader">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Стиль для текста контейнера заголовка экрана  -->
    <style name="ButtonBack">
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="backgroundColor">?attr/colorSurface</item>
        <item name="background">?attr/colorSurface</item>
        <item name="iconTint">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="icon">@drawable/ic_arrow_back_24</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">@dimen/width_button_back</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_from_the_text_icon_back</item>
    </style>

    <!-- Стиль swith  -->
    <style name="ButtonSwitch">
        <item name="trackTint">@color/track_color_selector_light</item>
        <item name="thumbTint">@color/thumb_color_selector_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Стиль строки поиска  -->
    <style name="searchBarText">
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableTint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/layout_height</item>
        <item name="android:drawablePadding">@dimen/element_padding_8</item>
        <item name="android:paddingStart">@dimen/element_padding_12</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <!-- Стиль кнопки очистки строки поиска  -->
    <style name="clearButton">
        <item name="android:tint">@color/gray</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">@dimen/element_margin_8</item>
    </style>




</resources>

